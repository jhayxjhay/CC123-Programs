//Program #01: Welcome to C++ Language Programming

/*
      use namespace
      main function will return a value and it is an int
      display strings, get data from user and display that data
*/

#include <iostream>
using namespace std;

int main (){
	string name;
	cout<<"welcome to C++ Language Programming"; // display a string (a string is enclosed by "")
	cout<<"\nGood morning, Pal! What is your name?"; // \n escape sequence is a newline character
	cin>> name; // get string from user
	cout<<"Hi " + name +", Welcome to C++ Programming Class.\n"; //We can concatenate strings by using +
}
