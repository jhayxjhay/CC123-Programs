// Program #02: Sum of Two Numbers

#include <iostream>
using namespace std;

int main(){
	int number1, number2, result;
	cout<<"Please enter your first number: ";
	cin>>number1; // get an integer value from the user
	cout<<"Please enter your second number: ";
	cin>>number2;
	result = number1+number2; // add the two numbers and store the value to result variable
	cout<<"Sum of the two numbers is "<<result;
}
